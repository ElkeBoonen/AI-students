<Page
    x:Class="Random_Art.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Random_Art"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="967">

    <Grid Margin="0,0,10,0">
        <Canvas x:ConnectionId='2' x:Name="cnvArtBoard" HorizontalAlignment="Left" Height="704" Margin="10,10,0,0" VerticalAlignment="Top" Width="700"/>
        <Button x:ConnectionId='3' x:Name="btnGo" Content="Go!" Margin="750,230,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.326,0.684" Width="190" Height="69"                     FontSize="18"/>
        <ToggleSwitch x:ConnectionId='4' x:Name="tglColor" Header="Random colors?" Margin="750,34,0,0" VerticalAlignment="Top" Height="79" FontSize="20" Width="193"/>
        <Button x:ConnectionId='5' x:Name="btnClear" Content="Clear" Margin="747,319,0,0" VerticalAlignment="Top" Height="69" Width="193"                        RenderTransformOrigin="2.556,0.494" FontSize="18"/>
        <Slider x:ConnectionId='6' x:Name="sldSlider" Margin="747,148,17,513" Maximum="1000" Minimum="1" Value="500"/>

    </Grid>
</Page>

